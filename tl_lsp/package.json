{
	"name": "lang",
	"displayName": "lang",
	"description": "Syntax highlighting for lang",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.70.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:lang"
	],
	"repository": {
		"url": "https://github.com/Ocrap7/lang"
	},
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "lang",
				"aliases": [
					"X lang",
					"lang"
				],
				"extensions": [
					".xl"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "lang",
				"scopeName": "source.lang",
				"path": "./syntaxes/lang.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "on",
					"description": "Traces the communication between VS Code and the language server."
				},
				"lang.lsPath": {
					"type": "string",
					"scope": "resource",
					"markdownDescription": "Path to X language server binary"
				},
				"lang.debug": {
					"type": "boolean",
					"scope": "resource",
					"markdownDescription": "Listen for server isntead of automatically starting it"
				}
			}
		}
	},
	"devDependencies": {
		"@types/mocha": "^10.0.1",
		"@types/node": "^18.11.18",
		"ts-loader": "^9.4.2",
		"typescript": "^4.9.4",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh",
		"package": "vsce package"
	}
}